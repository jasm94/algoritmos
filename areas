#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ()
{
 float base, altura, area, radio;
 int opcion;
 cout<<"1.- Area de cuadrado: "<<endl;
 cout<<"2.- Area de rectangulo: "<<endl;
 cout<<"3.- Area de triangulo: "<<endl;
 cout<<"0.- Salir"<<endl;
 cout<<"Eliga una opcion: ";
 cin>>opcion;
 switch (opcion)
 {
  case 1: cout<<"Ingrese base: ";
          cin>>base;
          area=(base*base);
          cout<<"El area es: "<<area;
         break;

 case 2: cout<<"Ingrese base: ";
         cin>>base;
	   	 cout<<"ingrese la altura: ";
		 cin>> altura;
         area=(base*altura);
         cout<<"El area es: "<<area;
         break;

 case 3: cout<<"Ingrese base: ";
         cin>>base;
         cout<<"Ingrese altura: ";
         cin>>altura;
         area=(base*altura)/2;
         cout<<"El area es: "<<area;
         break;

 case 0: cout<<"Salir";
         break;

default: cout<<"Opcion invalida "<<endl;
}
getch();

}
